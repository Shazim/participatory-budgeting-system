<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <i class="fas fa-lock fa-3x text-primary mb-3"></i>
            <h2 class="h3 mb-2">Reset Password</h2>
            <p class="text-muted">Enter your new password below</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), 
                              html: { method: :put, class: "needs-validation", novalidate: true },
                              wrapper: :vertical_form,
                              wrapper_mappings: {
                                check_boxes: :vertical_radio_and_checkboxes,
                                radio_buttons: :vertical_radio_and_checkboxes,
                                file: :vertical_file_input,
                                boolean: :vertical_boolean
                              }) do |f| %>
            
            <%= f.error_notification %>

            <%= f.input :reset_password_token, as: :hidden %>

            <div class="form-inputs">
              <%= f.input :password,
                          required: true,
                          autofocus: true,
                          placeholder: "Enter your new password",
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { 
                            class: "form-control form-control-lg",
                            autocomplete: "new-password"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :password_confirmation,
                          required: true,
                          placeholder: "Confirm your new password",
                          input_html: { 
                            class: "form-control form-control-lg",
                            autocomplete: "new-password"
                          },
                          wrapper_html: { class: "mb-4" } %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, "Change Password", 
                          class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <p class="text-muted mb-0">
              <%= link_to "Back to sign in", new_user_session_path, class: "text-decoration-none" %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
