<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow">
        <div class="card-body p-5">
          <div class="text-center mb-4">
            <i class="fas fa-sign-in-alt fa-3x text-primary mb-3"></i>
            <h2 class="h3 mb-2">Welcome Back</h2>
            <p class="text-muted">Sign in to your account</p>
          </div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                              html: { class: "needs-validation", novalidate: true },
                              wrapper: :vertical_form,
                              wrapper_mappings: {
                                check_boxes: :vertical_radio_and_checkboxes,
                                radio_buttons: :vertical_radio_and_checkboxes,
                                file: :vertical_file_input,
                                boolean: :vertical_boolean
                              }) do |f| %>
            
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          placeholder: "Enter your email address",
                          input_html: { 
                            class: "form-control form-control-lg",
                            autocomplete: "email"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :password,
                          required: false,
                          placeholder: "Enter your password",
                          input_html: { 
                            class: "form-control form-control-lg",
                            autocomplete: "current-password"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <% if devise_mapping.rememberable? %>
                <div class="mb-3">
                  <%= f.input :remember_me, 
                              as: :boolean,
                              wrapper_html: { class: "form-check" },
                              input_html: { class: "form-check-input" },
                              label_html: { class: "form-check-label" } %>
                </div>
              <% end %>
            </div>

            <div class="form-actions d-grid">
              <%= f.button :submit, "Sign In", 
                          class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name), 
                          class: "text-decoration-none d-block mb-2" %>
            <% end %>
            
            <% if devise_mapping.registerable? && controller_name != 'registrations' %>
              <p class="text-muted mb-0">
                Don't have an account? 
                <%= link_to "Sign up here", new_registration_path(resource_name), 
                            class: "text-decoration-none" %>
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
