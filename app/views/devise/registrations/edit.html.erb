<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">
            <i class="fas fa-user-edit me-2"></i>
            Edit Profile
          </h4>
        </div>
        <div class="card-body p-4">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
                              html: { method: :put, class: "needs-validation", novalidate: true },
                              wrapper: :vertical_form,
                              wrapper_mappings: {
                                check_boxes: :vertical_radio_and_checkboxes,
                                radio_buttons: :vertical_radio_and_checkboxes,
                                file: :vertical_file_input,
                                boolean: :vertical_boolean
                              }) do |f| %>
            
            <%= f.error_notification %>

            <div class="form-inputs">
              <%= f.input :name,
                          required: true,
                          autofocus: true,
                          placeholder: "Enter your full name",
                          input_html: { 
                            class: "form-control",
                            autocomplete: "name"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :email, 
                          required: true,
                          placeholder: "Enter your email address",
                          input_html: { 
                            class: "form-control",
                            autocomplete: "email"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div class="alert alert-info mb-3">
                  Currently waiting confirmation for: <%= resource.unconfirmed_email %>
                </div>
              <% end %>

              <hr class="my-4">
              
              <h6 class="text-muted mb-3">
                <i class="fas fa-lock me-2"></i>
                Change Password
              </h6>
              <p class="small text-muted mb-3">Leave blank if you don't want to change your password</p>

              <%= f.input :password, 
                          autocomplete: "new-password",
                          required: false,
                          placeholder: "New password (leave blank if unchanged)",
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { 
                            class: "form-control"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <%= f.input :password_confirmation,
                          required: false,
                          placeholder: "Confirm new password",
                          input_html: { 
                            class: "form-control",
                            autocomplete: "new-password"
                          },
                          wrapper_html: { class: "mb-3" } %>

              <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Current password required:</strong> We need your current password to confirm your changes
              </div>

              <%= f.input :current_password,
                          required: true,
                          placeholder: "Enter your current password",
                          input_html: { 
                            class: "form-control",
                            autocomplete: "current-password"
                          },
                          wrapper_html: { class: "mb-4" } %>
            </div>

            <div class="form-actions d-flex gap-2">
              <%= f.button :submit, "Update Profile", 
                          class: "btn btn-primary" %>
              <%= link_to "Back", :back, class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="card mt-4 border-danger">
        <div class="card-header bg-danger text-white">
          <h6 class="mb-0">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Danger Zone
          </h6>
        </div>
        <div class="card-body">
          <p class="text-muted mb-3">
            Unhappy with your account? You can cancel it at any time. This action cannot be undone.
          </p>
          <%= button_to "Cancel my account", registration_path(resource_name), 
                        data: { 
                          confirm: "Are you sure? This will permanently delete your account and all associated data.", 
                          turbo_method: :delete 
                        }, 
                        class: "btn btn-outline-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
