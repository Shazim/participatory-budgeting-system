<!-- Page Header -->
<div class="bg-light py-4">
  <div class="container">
    <h1 class="h2 mb-0">
      <i class="fas fa-file-download me-2"></i>
      Reports
    </h1>
    <p class="text-muted mb-0">Generate and download system data reports.</p>
  </div>
</div>

<!-- Main Content -->
<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h6 class="mb-0">Available Reports</h6>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">All Projects</h6>
          <p class="mb-0 text-muted small">A complete list of all projects submitted, including their status and budget details.</p>
        </div>
        <%= link_to "Download CSV", admin_dashboard_reports_path(format: :csv, report_type: 'all_projects'), class: 'btn btn-sm btn-outline-success' %>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">Voting Results</h6>
          <p class="mb-0 text-muted small">A detailed breakdown of votes for each project, including voter information.</p>
        </div>
        <%= link_to "Download CSV", admin_dashboard_reports_path(format: :csv, report_type: 'voting_results'), class: 'btn btn-sm btn-outline-success' %>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">User List</h6>
          <p class="mb-0 text-muted small">A report containing information about all registered users.</p>
        </div>
        <%= link_to "Download CSV", admin_dashboard_reports_path(format: :csv, report_type: 'user_list'), class: 'btn btn-sm btn-outline-success' %>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">Budget Utilization</h6>
          <p class="mb-0 text-muted small">A summary of how budget funds have been allocated and utilized across categories.</p>
        </div>
        <%= link_to "Download CSV", admin_dashboard_reports_path(format: :csv, report_type: 'budget_utilization'), class: 'btn btn-sm btn-outline-success' %>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div>
          <h6 class="mb-1">Project Impact Report</h6>
          <p class="mb-0 text-muted small">A detailed report on the impact metrics for all projects.</p>
        </div>
        <%= link_to "Download CSV", admin_dashboard_reports_path(format: :csv, report_type: 'impact_report'), class: 'btn btn-sm btn-outline-success' %>
      </li>
    </ul>
    <div class="card-footer text-muted small">
      Click on a "Download CSV" button to generate and download the corresponding report.
    </div>
  </div>
</div>
