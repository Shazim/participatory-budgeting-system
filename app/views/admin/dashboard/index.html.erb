<!-- Page Header -->
<div class="bg-primary text-white py-4">
  <div class="container">
    <h1 class="h2 mb-0">
      <i class="fas fa-user-shield me-2"></i>
      Admin Dashboard
    </h1>
    <p class="opacity-75 mb-0">System-wide overview and management tools.</p>
  </div>
</div>

<!-- Main Content -->
<div class="container mt-4">
  <!-- Quick Stats -->
  <div class="row g-4 mb-4">
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-landmark fa-2x text-primary mb-2"></i>
          <h5 class="card-title"><%= @stats[:total_budgets] %></h5>
          <p class="card-text text-muted">Total Budgets</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-project-diagram fa-2x text-success mb-2"></i>
          <h5 class="card-title"><%= @stats[:total_projects] %></h5>
          <p class="card-text text-muted">Total Projects</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-users fa-2x text-info mb-2"></i>
          <h5 class="card-title"><%= @stats[:total_users] %></h5>
          <p class="card-text text-muted">Total Users</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card text-center">
        <div class="card-body">
          <i class="fas fa-poll fa-2x text-warning mb-2"></i>
          <h5 class="card-title"><%= @stats[:total_votes] %></h5>
          <p class="card-text text-muted">Total Votes</p>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <!-- Recent Activity -->
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0"><i class="fas fa-history me-2"></i>Recent Activity</h6>
        </div>
        <div class="card-body">
          <!-- Placeholder for recent activity feed -->
          <p class="text-muted">Recent activity feed will be implemented here.</p>
        </div>
      </div>
    </div>

    <!-- System Status -->
    <div class="col-lg-4">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0"><i class="fas fa-server me-2"></i>System Status</h6>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between">
            <span>Rails Version:</span>
            <strong><%= Rails.version %></strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Ruby Version:</span>
            <strong><%= RUBY_VERSION %></strong>
          </li>
          <li class="list-group-item d-flex justify-content-between">
            <span>Environment:</span>
            <span class="badge bg-success"><%= Rails.env %></span>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
